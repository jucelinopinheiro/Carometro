@model CreateTurmaAtaViewModel;

@{
    ViewData["Title"] = "Anexar ATA";
}
<div class="row">
    <div class="col">
        <h1 class="display-4">Anexar ATA de Reunião</h1>
        <hr />
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col">
        <form asp-controller="Turma" asp-action="CreateAta" enctype="multipart/form-data" method="post">

            <div hidden>
                @Html.HiddenFor(x => x.TurmaId)
                @Html.ValidationMessageFor(x => x.TurmaId)
            </div>

            <div class="row mt-2">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Descricao)
                        @Html.EditorFor(x => x.Descricao, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(x => x.Descricao)
                    </div>
                    <small class="form-text text-muted">Ex: Reunião, pré-conselho ou conselho...</small>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="input-group">
                        <label class="input-group-text" for="Arquivo">Upload</label>
                        <input type="file" asp-for="Anexo" accept="application/pdf" class="form-control">
                    </div>
                    <small class="form-text text-muted">Somente arquivo ".pdf"</small>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col">
                    <a class="btn ca-btn-secondary" onclick="history.back()"><i class="fas fa-undo-alt"></i> Voltar</a>
                    <button type="submit" class="btn ca-btn-primary"><i class="fas fa-save"></i> Salvar</button>
                </div>
            </div>

        </form>
    </div>
</div>
