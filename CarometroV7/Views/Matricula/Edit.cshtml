@model Matricula
@{
    ViewData["Title"] = "Editar Matrícula";
}

<div>
    <div>
        <h1 class="display-4">Editar Matrícula</h1>
        <hr>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            @TempData["MensagemErro"]
        </div>
    }

    <form asp-controller="Matricula" asp-action="Edit" method="post">
        <div hidden>
            @Html.HiddenFor(x => x.Id)
            @Html.ValidationMessageFor(x => x.Id)
        </div>
        <div class="form-group mb-2">
            @Html.LabelFor(x => x.Aluno.Nome)
            @Html.EditorFor(x => x.Aluno.Nome, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(x => x.Aluno.Nome)
        </div>
        <div class="row mb-2">
            <div class="col-4 form-group mb-2">
                @Html.LabelFor(x => x.MatriculaSgset)
                @Html.EditorFor(x => x.MatriculaSgset, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.MatriculaSgset)
            </div>
            <div class="col-4 form-group mb-2">
                @Html.LabelFor(x => x.DataMatricula)
                <input type="date" class="form-control" asp-for="DataMatricula" asp-format="{0:yyyy-MM-dd}" value="@String.Format("{0:yyyy-MM-dd}", Model.DataMatricula)" required />
                @Html.ValidationMessageFor(x => x.DataMatricula)
            </div>
        </div>
        <div class="row mb-2">
            <div class="form-group col-md-8">
                @Html.LabelFor(x => x.TurmaId)
                <select class="form-control" required asp-for="TurmaId" asp-items="@ViewBag.Turmas">
                    <option selected="selected" value="">Selecione a Turma</option>
                </select>
                @Html.ValidationMessageFor(x => x.TurmaId)
            </div>
            <div class="form-group col-md-8">
                @Html.LabelFor(x => x.Status)
                <select class="form-control" required asp-for="Status" asp-items="@ViewBag.Status">
                    <option selected="selected" value="">Selecione o Status</option>
                </select>
                @Html.ValidationMessageFor(x => x.Status)
            </div>
        </div>
        

        <div class="row">
            <div class="col">
                <hr>
                <a class="btn ca-btn-secondary" onclick="history.back()"><i class="fas fa-undo-alt"></i> Voltar</a>
                <button type="submit" id="btn-salvar" class="btn ca-btn-primary"><i class="fas fa-save"></i> Salvar</button>
            </div>
        </div>
    </form>
</div>