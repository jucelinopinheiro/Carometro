@model CreateUsuarioViewModel
@{
    ViewData["Title"] = "Usuário";
}
<div class="row">
    <div class="col">
        <h1 class="display-4">Cadastrar Usuário</h1>
        <hr />
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Usuario" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-2">
                <div class="col-md-4 form-group">
                    @Html.LabelFor(x => x.Id)
                    @Html.EditorFor(x => x.Id, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Digite o NIF do Usuário" } })
                    @Html.ValidationMessageFor(x => x.Id)
                </div>

                <div class="col-md-8 form-group">
                    @Html.LabelFor(x => x.Perfil)
                    <select class="form-control" required asp-for="Perfil" asp-items="@ViewBag.Perfil">
                        <option selected="selected" value="">Selecione o Perfil</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.Perfil)
                </div>
            </div>

            <div class="form-group mb-2">
                @Html.LabelFor(x => x.Nome)
                @Html.EditorFor(x => x.Nome, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Nome)
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(x => x.Email)
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="row mb-2">
                <div class="col-md-2">
                    <div class="form-check form-switch">
                        @Html.CheckBoxFor(x => x.Notificar, new { @class = "form-check-input" })
                        @Html.LabelFor(x => x.Notificar, new { @class = "form-check-label" })
                        @Html.ValidationMessageFor(x => x.Notificar)
                    </div>
                </div>
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(x => x.SenhaHash)
                @Html.PasswordFor(x => x.SenhaHash, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(x => x.SenhaHash)
            </div>

            <div class="row">
                <div class="col">
                    <a type="button" class="btn ca-btn-secondary" asp-controller="Usuario" asp-action="Index">
                        <i class="fas fa-undo-alt"></i>
                        Voltar
                    </a>
                    <button type="submit" class="btn ca-btn-primary"><i class="fas fa-save"></i> Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>