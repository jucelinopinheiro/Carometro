@model Usuario;
@{
    ViewData["Title"] = "Detalhes";
}
<div class="row">
    <div class="col">
        <h1 class="display-4">Detalhes do Usuário</h1>
        <hr />
    </div>
</div>

<partial name="_UsuarioResumo"  />

<div class="row mt-3">
    <div class="col">
        <a type="button" class="btn ca-btn-primary" asp-controller="Usuario" asp-action="Edit" asp-route-id="@Model?.Id">
            <i class="fa-solid fa-pen-to-square"></i>
            Editar
        </a>
        <a type="button" class="btn ca-btn-secondary" asp-controller="Usuario" asp-action="Index">
            <i class="fas fa-undo-alt"></i>
            Voltar
        </a>
    </div>
</div>
