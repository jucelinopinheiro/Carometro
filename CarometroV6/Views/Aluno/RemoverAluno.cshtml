@model Aluno
@{
    ViewData["Title"] = "Remover Aluno";
}

<div>
    <div>
        <h1 class="display-4">Excluir Aluno</h1>
        <hr>
    </div>
    <div class="row mt-2">
        <div class="col">
            <p class="h4 bg-light"><strong>       Id: </strong>@Model.Id</p>
            <p class="h4 bg-light"><strong>Descrição: </strong>@Model.Nome</p>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            <a role="button" class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Aluno" asp-action="ExcluirAluno"><i class="far fa-thumbs-up"></i> Confirma</a>
            <a role="button" class="btn btn-primary" asp-controller="Aluno" asp-action="Index"><i class="fas fa-times"></i> Cancela</a>
        </div>
    </div>
</div>
