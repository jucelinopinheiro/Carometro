@using CarometroV6.ViewModel.OcorrenciaViewModel

@model CriarOcorrenciaViewModel
@{
    ViewData["Title"] = "Criar ocorrência";
}

<div>
    <div>
        <h1 class="display-4">Criar ocorrência</h1>
        <hr>

    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            @TempData["MensagemErro"]
        </div>
    }

    <form asp-controller="Ocorrencia" asp-action="CriarOcorrencia" enctype="multipart/form-data" method="post">

        <div hidden>
            @Html.HiddenFor(x => x.AlunoId)
            @Html.ValidationMessageFor(x => x.AlunoId)
        </div>

        <div hidden>
            @Html.HiddenFor(x => x.TurmaId)
            @Html.ValidationMessageFor(x => x.TurmaId)
        </div>

        <div class="row mt-2">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.Nome)
                    @Html.EditorFor(x => x.Nome, new {htmlAttributes = new {@class="form-control", @required="required"}})
                    @Html.ValidationMessageFor(x => x.Nome)
                </div>
            </div>
        </div>
         
        <div class="form-group mt-2">
            @Html.LabelFor(x => x.Descricao)
            @Html.TextAreaFor(x => x.Descricao, new {@class="form-control", @required="required"})
            @Html.ValidationMessageFor(x => x.Descricao)
        </div>

        <div class="row mt-2">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.NomeDoAnexo)
                    @Html.EditorFor(x => x.NomeDoAnexo, new {htmlAttributes = new {@class="form-control"}})
                    @Html.ValidationMessageFor(x => x.NomeDoAnexo)
                </div>
                <small class="form-text text-muted">Ex: Atestado, comprovante, certificado, etc...</small>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <div class="input-group">
                    <label class="input-group-text" for="Arquivo">Upload</label>
                    <input type="file" asp-for="Anexo" accept="image/jpeg,image/jpg,image/png,application/pdf" class="form-control">
                </div>
                <small class="form-text text-muted">Somente arquivo ".pdf, .png, ou .jpg"</small>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <a class="btn btn-secondary" onclick="history.back()"><i class="fas fa-undo-alt"></i> Voltar</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Salvar</button>
            </div>
        </div>

    </form>

</div>