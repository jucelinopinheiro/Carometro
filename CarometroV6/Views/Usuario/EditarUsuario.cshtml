@using CarometroV6.ViewModel.UsuarioViewModel
@model EditarUsuarioViewModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div>
    <div>
        <h1 class="display-4">Editar usuário</h1>
        <hr>

    </div>

    <form asp-controller="Usuario" asp-action="EditarUsuario" method="post">
        <div class="row mt-2">
            <div class="col-md-4 form-group">
                @Html.LabelFor(x => x.Id)
                @Html.EditorFor(x => x.Id, new {htmlAttributes = new {@class="form-control", @disabled="disabled", @required="required"}})
                @Html.ValidationMessageFor(x => x.Id)
            </div>

            <div class="col-md-8 form-group">
                @Html.LabelFor(x => x.EPerfil)
                <select class="form-control" required asp-for="EPerfil" asp-items="Model.ListPerfil">
                    <option selected="selected" value="">Selecione o Perfil</option>
                </select>
                @Html.ValidationMessageFor(x => x.EPerfil)
            </div>
        </div>

        <div class="form-group mt-2">
            @Html.LabelFor(x => x.Nome)
            @Html.EditorFor(x => x.Nome, new {htmlAttributes = new {@class="form-control", @required="required"}})
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <div class="form-group mt-2">
            @Html.LabelFor(x => x.Email)
            @Html.EditorFor(x => x.Email, new {htmlAttributes = new {@class="form-control"}})
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="row mt-2">
            <div class="col-md-2">
                <div class="form-check form-switch">
                    @Html.CheckBoxFor(x => x.Notificar, new {@class="form-check-input"})
                    @Html.LabelFor(x => x.Notificar, new {@class="form-check-label"})
                    @Html.ValidationMessageFor(x => x.Notificar)
                </div>
            </div>
        </div>

        <div class="form-group mt-2">
            @Html.LabelFor(x => x.SenhaHash)
            @Html.PasswordFor(x => x.SenhaHash, new {@class="form-control"})
            @Html.ValidationMessageFor(x => x.SenhaHash)
        </div>

        <div class="row mt-3">
            <div class="col">
                <a class="btn btn-secondary" asp-area="" asp-controller="Usuario" asp-action="Index"><i class="fas fa-undo-alt"></i> Voltar</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Salvar</button>
            </div>
        </div>

    </form>
</div>
